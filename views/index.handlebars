<div id="home">
  <div class="container">
    {{#if user}}
    <div>
      <div class="col-8 offset-2">
        <h1>Hello: {{user.username}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="blog-text">Blog Text:</label>
            <input type="text" id="blog-text" class="form-control" aria-describedby="blog-text" placeholder="Enter blog Text">
          </div>
          <div class="form-group">
            <label for="blog-description">Blog Description:</label>
            <textarea class="form-control" id="blog-description" aria-describedby="blog-description" placeholder="Enter blog Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        {{!--Add Author Slot --}}
        <h3>Blogs:</h3>
        <ul id="blog-list" class="list-group">
          {{#each user.blogs}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="blog/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>

    {{else}}
    <div class="row">
      <div class="col-8 m-auto">
      <h2>Create Account Here!</h2>
      {{>create}}
      </div>
    </div>
    {{/if}}

  </div>
</div>
</div>
</div>